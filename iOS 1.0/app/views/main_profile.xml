<Alloy>
	<ScrollView class="main_profile">
		<View class="status_bar" />
		<View class="status">
			<Label id="status_text" class="status_text" />
			<ImageView id="status_bird" class="status_bird" />
		</View>
		<View id="profile_info" class="profile_info">
			<ImageView id="profile_info_back" class="profile_info_back" />
			<ImageView id="profile_info_overlay" class="profile_info_overlay"/>
			<ImageView class="profile_info_triangle" />
			<ImageView id="profile_info_picture" class="profile_info_picture" />
			<ImageView id="profile_info_picture_stroke" class="profile_info_picture_stroke" />
			<Label id="profile_info_username" class="profile_info_username" />
			<Label id="profile_info_description" class="profile_info_description" />
		</View>
		<View class="menu">
			<View class="menu_border" />
			<View class="menu_button_border" />
			<Button id="following" class="menu_button" left="0%" title="Following" onSingletap="followingTap" />
			<Button id="followers" class="menu_button" left="50%" title="Followers" onSingletap="followersTap" />
		</View>
		<View id="results" class="results">
			<ActivityIndicator id="loading" class="loading" />
			<Button id="prev" class="pagination" onSingletap="prevTap">
				<ImageView class="icon_up" />
				<View class="grey_border" />
			</Button>
			<View id="profile_list" class="profile_list">
				<View id="list_data" class="list_data" onSingletap="listTap"/>
			</View>
			<Button id="next" class="pagination" onSingletap="nextTap">
				<ImageView class="icon_down" />
				<View class="grey_border" />
			</Button>
			<View class="footer" />
		</View>
	</ScrollView>
</Alloy>