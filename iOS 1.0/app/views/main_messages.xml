<Alloy>
	<View class="main_messages">
		<ScrollView id="main_scroll" class="main_scroll">
			<View class="header" />
			<ActivityIndicator id="loading" class="loading" />
			<View id="message_list" class="message_list">
				<View id="list_data" class="list_data" onSingletap="listTap"/>
			</View>
			<View class="footer" />
		</ScrollView>
		<View id="message_bar" class="message_bar">
			<TextArea id="message_input" class="message_input" onBlur="messageBlur" onFocus="messageFocus" />
			<View class="message_line" />
			<View class="message_border" />
			<ImageView class="message_topleft" />
			<ImageView class="message_topright" />
			<Button class="message_send" onSingletap="sendTap" />
		</View>
	</View>
</Alloy>